generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid()) @map("_id")
  email       String    @unique
  username    String    @unique
  name        String?
  accessToken String?
  password    String?
  pic         String?   @default("https://i.ytimg.com/vi/Py_-3di1yx0/maxresdefault.jpg")
  age         String?   @default("18")
  Stats       Stats[]
  History     History[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Stats {
  id               String    @id @default(cuid()) @map("_id")
  user             User      @relation(fields: [userId], references: [id])
  userId           String
  totalTimeStudied Int
  maxTimeStudied   Int
  streak           Int       @default(0)
  date             DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model History {
  id          String   @id @default(cuid()) @map("_id")
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  date        DateTime
  timeStudied Int
  task        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TempUser {
  id        String   @id @default(cuid()) @map("_id")
  email     String   @unique
  username  String?  @unique
  name      String?
  password  String?
  age       String?
  pic       String?  @default("https://i.ytimg.com/vi/Py_-3di1yx0/maxresdefault.jpg")
  OTP       String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
